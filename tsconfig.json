{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "ESNext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "esModuleInterop": true,
  "baseUrl": "./",
  "paths": {
    "@/*": "src/*",
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ],
}
